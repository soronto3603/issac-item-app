<?xml version="1.0" encoding="utf-8"?>
<!-- Each List Item is displayed as TextView defined below -->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="250px">
    <ImageView
        android:id="@+id/tv_user_image"
        android:layout_width="250px"
        android:layout_height="250px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:src="@drawable/no_image_icon"></ImageView>
    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="250px"
        android:layout_height="50px"
        android:lines="1"
        android:gravity="center"
        android:text="Name"
        android:textSize="40px"
        android:background="#777777"
        app:layout_constraintLeft_toLeftOf="@id/tv_user_image"
        app:layout_constraintTop_toBottomOf="@id/tv_user_image"
        app:layout_constraintHorizontal_chainStyle="packed"/>
    <TextView
        android:id="@+id/tv_user_score"
        android:layout_width="wrap_content"
        android:layout_height="320px"
        android:layout_marginLeft="30px"
        app:layout_constraintLeft_toRightOf="@id/tv_user_image"
        app:layout_constraintTop_toTopOf="@id/tv_user_image"
        android:padding="5dp"
        android:textSize="16sp" />


</LinearLayout>


